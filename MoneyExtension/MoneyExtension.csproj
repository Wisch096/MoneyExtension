<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <PackageId>MoneyExtensions</PackageId>
    <Version>1.0.0</Version>
    <License>MIT</License>
    <Authors>Matheus Wisch</Authors>    
    <Company>Verterent</Company>
    <PackageDescription>Extension to convert decimal to integer</PackageDescription>
    <RepositoryUrl>https://github.com/Wisch096/MoneyExtension</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Wisch096/MoneyExtension</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>money;int;decimal;converter</PackageTags>
    <Title>MoneyExtensions</Title>
    <Summary>Extension to convert decimal to integer</Summary>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../Media/icon.png" Pack="true" PackagePath="/" />
  </ItemGroup>
</Project>
